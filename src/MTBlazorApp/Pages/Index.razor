@page "/"

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Test Environment</MudText>
    <MudText Align="Align.Center">Press the "Send" button to generate and send a new order or "Continuous" to automatically forward a message every second.</MudText>
    <MudGrid Class="mt-8">
        <MudItem xs="12" sm="12" md="4">
            <MudCard Elevation="25" Class="rounded-lg pb-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5" Align="Align.Center">Order</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.h6">Order ID</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Secondary">@CurrentOrder.OrderId</MudText>
                    <MudText Typo="Typo.h6">Timestamp</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Secondary">@CurrentOrder.OrderTime</MudText>
                    <MudText Typo="Typo.h6">Total Processed</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Secondary">@TotalProcessedOrders</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="@SendMessage">Send</MudButton>                    
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Large" OnClick="@ToggleContinuous">Continuous</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
