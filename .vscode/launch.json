{
    "version": "0.2.0",
    "configurations": [  
        {
            "name": "Launch MTBlazorApp",
            "type": "pwa-chrome",
            "request": "launch",
            "timeout": 30000,
            "preLaunchTask": "build",
            "url": "http://localhost:5260",
            "webRoot": "${workspaceFolder}/src/MTBlazorApp",
            "inspectUri": "{wsProtocol}://{url.hostname}:{url.port}/_framework/debug/ws-proxy?browser={browserInspectUri}"
        },
        {
            "name": "Launch MTOrderService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/MTOrderService/bin/Debug/net6.0/MTOrderService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MTOrderService",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch All",
            "configurations": ["Launch MTBlazorApp", "Launch MTOrderService"]
        }
    ]
}